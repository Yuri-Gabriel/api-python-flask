{
    "version": 2,
    "builds": [
        {
            "src": "controller/*.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.13"
            }
        },
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.13"
            }
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "controller/controller.py"
        }
    ]
}